rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to access files in their own folder
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null 
                      && request.auth.uid != null 
                      && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read shared public files
    match /public/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid != null;
      allow write: if request.auth != null && request.auth.uid != null;
    }
    
    // Allow authenticated users to upload media files with automatic paths
    match /media/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null 
                      && request.auth.uid != null 
                      && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload Bible files
    match /bible_files/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null 
                      && request.auth.uid != null 
                      && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}